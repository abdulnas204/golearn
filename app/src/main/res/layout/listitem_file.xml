<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sender_list_item_name"
        android:layout_width="0dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:text="Test File"
        android:textSize="17sp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/sender_list_start_download"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="-4dp"
        fancy:fb_borderColor="@color/colorPrimary"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/white"
        fancy:fb_focusColor="@color/colorAccent"
        fancy:fb_radius="4dp"
        fancy:fb_iconPosition="right"
        fancy:fb_iconPaddingLeft="8dp"
        fancy:fb_iconResource="@drawable/ic_file_download_blue_24dp"
        android:text=""
        android:textSize="16sp"
        fancy:fb_textColor="@color/colorPrimary" />

</LinearLayout>