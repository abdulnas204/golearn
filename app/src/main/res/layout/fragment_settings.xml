<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/edit_user_info_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="-2dp"
                fancy:fb_borderColor="@color/gray_dark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/white"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_radius="0dp"
                fancy:fb_textGravity="left"
                android:text="Edit User Information"
                fancy:fb_iconPaddingRight="10dp"
                fancy:fb_iconPosition="left"
                fancy:fb_iconResource="@drawable/ic_person_black_24dp"
                android:textSize="16.5sp"
                android:textStyle="bold"
                fancy:fb_textColor="@color/gray_darker" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/edit_uni_info_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="-2dp"
                fancy:fb_borderColor="@color/gray_dark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/white"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_radius="0dp"
                fancy:fb_textGravity="left"
                android:text="Edit University Information"
                fancy:fb_iconPaddingRight="10dp"
                fancy:fb_iconPosition="left"
                fancy:fb_iconResource="@drawable/ic_school_black_24dp"
                android:textSize="16.5sp"
                android:textStyle="bold"
                fancy:fb_textColor="@color/gray_darker" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/sign_out_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="-2dp"
                fancy:fb_borderColor="@color/gray_dark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/white"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_radius="0dp"
                fancy:fb_textGravity="left"
                android:text="Sign Out"
                fancy:fb_iconPaddingRight="10dp"
                fancy:fb_iconPosition="left"
                fancy:fb_iconResource="@drawable/ic_launch_black_24dp"
                android:textSize="16.5sp"
                android:textStyle="bold"
                fancy:fb_textColor="@color/gray_darker" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</FrameLayout>